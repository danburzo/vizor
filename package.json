{
	"name": "vizor",
	"version": "0.1.0",
	"repository": "git@github.com:llll-org/vizor.git",
	"author": "Dan Burzo <danburzo@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"esbuild": "^0.16.12",
		"esm": "^3.2.25",
		"prettier": "2.8.1",
		"pretty-quick": "^3.1.3",
		"tape": "^5.6.1"
	},
	"scripts": {
		"prepare": "git config core.hooksPath .git-hooks",
		"start": "esbuild --servedir=dist && cp src/index.html dist/index.html",
		"build": "esbuild src/index.js --bundle --outdir=dist && cp src/index.html dist/index.html",
		"deploy": "npm run build && ./deploy.sh",
		"test": "tape -r esm 'src/**/__tests__/*.test.js'"
	},
	"prettier": {
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"tabWidth": 4,
		"jsxBracketSameLine": false,
		"arrowParens": "avoid",
		"printWidth": 100
	}
}
