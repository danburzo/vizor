{
	"name": "vizor",
	"version": "0.1.0",
	"main": "index.js",
	"repository": "git@github.com:llll-org/vizor.git",
	"author": "Dan Burzo <danburzo@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"axios": "^0.21.2",
		"react": "^17.0.1",
		"react-dom": "^17.0.1"
	},
	"devDependencies": {
		"esm": "^3.2.25",
		"gh-pages": "^3.1.0",
		"husky": "^5.1.3",
		"parcel": "^1.12.4",
		"prettier": "2.2.1",
		"pretty-quick": "^3.1.0",
		"tape": "^5.2.2"
	},
	"scripts": {
		"start": "parcel src/index.html",
		"build": "rm -rf ./dist && parcel build src/index.html --public-url https://llll.ro/tools/vizor",
		"precommit": "pretty-quick --staged",
		"deploy": "yarn build && ./deploy.sh",
		"test": "tape -r esm 'src/**/__tests__/*.test.js'"
	},
	"prettier": {
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"tabWidth": 4,
		"jsxBracketSameLine": false,
		"arrowParens": "avoid",
		"printWidth": 100
	}
}
